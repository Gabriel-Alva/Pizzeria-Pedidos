{
    "name": "sistema-pizzeria/api-gateway",
    "description": "API Gateway para el sistema de pizzeria basado en microservicios.",
    "type": "project",
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.0",
        "nyholm/psr7": "^1.2",
        "nyholm/psr7-server": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "vlucas/phpdotenv": "^5.0",
        "firebase/php-jwt": "^6.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8000 -t publico",
        "test": "phpunit"
    }
}